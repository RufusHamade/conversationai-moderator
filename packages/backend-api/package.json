{
  "name": "@conversationai/moderator-backend-api",
  "description": "API Endpoints for OSMod",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "version": "1.0.6",
  "scripts": {
    "test": "npm run mocha",
    "test:watch": "npm run compile && npm run compile:watch | npm run mocha:watch",
    "mocha": "WORKER_RUN_IMMEDIATELY=true ../../node_modules/.bin/mocha 'dist/test/**/*.spec.js' --recursive --timeout 10000",
    "mocha:watch": "WORKER_RUN_IMMEDIATELY=true ../../node_modules/.bin/mocha --watch 'dist/test/**/*.spec.js' --recursive --timeout 10000",
    "start": "node ./server.js",
    "lint": "find src -name '*.ts' | xargs ../../node_modules/.bin/tslint -c ../../tslint.json",
    "lint:fix": "find src -name '*.ts' | xargs ../../node_modules/.bin/tslint -c ../../tslint.json --fix",
    "watch": "npm run compile && npm run compile:watch | npm run server",
    "compile": "rm -rf dist && ../../node_modules/.bin/tsc --sourceMap --outDir dist --declaration",
    "compile:watch": "../../node_modules/.bin/tsc --watch --sourceMap --outDir dist --declaration",
    "build-disabled": "npm run compile",
    "server": "nodemon --delay 5 --debug=5858 --legacy-watch --watch 'dist/**/*.js' --ignore 'test' ./server.js"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": "6.11.0"
  },
  "dependencies": {
    "@conversationai/moderator-backend-core": "1.0.6",
    "@conversationai/moderator-backend-queue": "1.0.6",
    "@conversationai/moderator-config": "1.0.3",
    "@conversationai/moderator-frontend-web": "1.0.6",
    "@conversationai/moderator-jsonapi": "1.0.6",
    "@types/bluebird": "3.5.2",
    "@types/express": "4.0.35",
    "@types/joi": "10.0.1",
    "@types/lodash": "4.14.58",
    "@types/mysql": "0.0.31",
    "@types/qs": "6.2.31",
    "@types/redis": "0.12.36",
    "@types/request": "0.0.42",
    "@types/sequelize": "3.4.43",
    "@types/underscore.string": "0.0.30",
    "@types/winston": "2.3.0",
    "bluebird": "3.5.0",
    "canvas-prebuilt": "1.6.0",
    "express": "4.15.2",
    "joi": "10.3.1",
    "lodash": "4.17.4",
    "moment": "2.18.1",
    "mysql": "2.13.0",
    "nodemon": "1.11.0",
    "passport": "0.3.2",
    "qs": "6.4.0",
    "randomstring": "1.1.5",
    "redis": "2.7.1",
    "request": "2.81.0",
    "sequelize": "3.30.4",
    "underscore.string": "3.3.4",
    "winston": "2.3.1"
  }
}